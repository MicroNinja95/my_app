= form_for @category do |form|
  - if @category.errors.any?
    #error_explanation
      %h2="#{pluralize(@category.errors.count, "error")} This category can not be saved. :"
      %ul
      - @category.errors.full_messages.each do |message|
        %li= message

  .field
    = form.label :title
    = form.text_area :title
  
  .actions
    = form.submit
