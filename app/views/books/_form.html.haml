= form_for @book do |form|
  - if @book.errors.any?
    #error_explanation
      %h2="#{pluralize(@book.errors.count, "error")} This book can not be saved. :"
      %ul
      - @book.errors.full_messages.each do |message|
        %li= message

  .field
    = form.label :title
    = form.text_area :title
  .field
    = form.label :ISBN
    = form.text_area :ISBN
  .field
    = form.label :author_id
    = form.collection_select :author_ids, Author.all, :id, :fName, {}, {multiple: true, class: 'chzn'}
  .field
    = form.label :price
    = form.text_field :price
  .field
    = form.label :category_id
    = form.collection_select :category_id, Category.all, :id, :title, {}, {class: 'chzn'}
  .field
    = form.label :publisher_id
    = form.collection_select :publisher_id, Publisher.all, :id, :title, {}, {class: 'chzn'}
  .field
    = form.label :published
    = form.date_select :published
  .actions
    = form.submit
